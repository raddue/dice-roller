<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aberdoober.diceroller.MainActivity">

    <Button
        android:id="@+id/button1d20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1d20"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button1d20results"
        android:layout_marginRight="8dp"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/button1d20results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="46dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button1d12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1d12"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button1d12results"
        android:layout_marginRight="8dp"
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <EditText
        android:id="@+id/button1d12results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginTop="128dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="46dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
